{
  "productName": "Edge Policy Hub",
  "version": "0.1.0",
  "identifier": "com.edgepolicyhub.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "wix", "dmg"],
    "category": "Utility",
    "shortDescription": "Multi-tenant edge policy enforcement gateway",
    "longDescription": "Edge Policy Hub enforces data residency, privacy, and cost guardrails at the edge with ABAC policies and OPA/Rego enforcement.",
    "copyright": "Copyright Â© 2025 Edge Policy Hub Contributors",
    "licenseFile": "../../../LICENSE",
    "externalBin": [
      "edge-policy-enforcer",
      "edge-policy-proxy-http",
      "edge-policy-bridge-mqtt",
      "edge-policy-audit-store",
      "edge-policy-quota-tracker"
    ],
    "resources": [
      "../../../infra/systemd/edge-policy-enforcer.service",
      "../../../infra/systemd/edge-policy-proxy-http.service",
      "../../../infra/systemd/edge-policy-bridge-mqtt.service",
      "../../../infra/systemd/edge-policy-audit-store.service",
      "../../../infra/systemd/edge-policy-quota-tracker.service",
      "../../../infra/systemd/edge-policy-hub.target",
      "../../../infra/windows/edge-policy-hub-service.xml",
      "../../../infra/windows/edge-policy-hub-launcher.ps1",
      "../../../infra/windows/install.ps1",
      "../../../infra/windows/uninstall.ps1",
      "../../../examples/tenants/",
      "../../../examples/policies/"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3"]
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "openssl"]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "entitlements": "entitlements.plist"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Edge Policy Hub",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/acailic/edge-policy-hub/releases/latest/download/latest.json"],
      "dialog": true,
      "pubkey": "<PUBLIC_KEY_PLACEHOLDER>"
    }
  }
}
