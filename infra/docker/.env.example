# Upstream Backend Service
UPSTREAM_URL=http://your-backend:8000

# External Ports (override defaults if needed)
# PROXY_HTTP_PORT=8080
# MQTT_TCP_PORT=1883
# MQTT_TLS_PORT=8883

# Logging
LOG_LEVEL=info

# Audit Store
ENABLE_DEFERRED_UPLOAD=true
UPLOAD_ENDPOINT=https://cloud.example.com/api/v1
# UPLOAD_INTERVAL_SECS=300

# Quota Tracker
DEFAULT_MESSAGE_LIMIT=50000
DEFAULT_BANDWIDTH_LIMIT_GB=100.0

# TLS Configuration (optional)
# ENABLE_TLS=false
# TLS_CERT_PATH=/certs/server.crt
# TLS_KEY_PATH=/certs/server.key
# TLS_CLIENT_CA_PATH=/certs/ca.crt
